<Window x:Name="Window" x:Class="P1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" Height="700" Width="1000" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="WindowTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Berlin Sans FB"/>
            <Setter Property="Margin" Value="10 0 10 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="FontWeight" Value="Light"/>
        </Style>
        <LinearGradientBrush x:Key="LightBlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#36688D" Offset="0"/>
            <GradientStop Color="#0AAFF1" Offset="0.5"/>
            <GradientStop Color="#36688D" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="TopWindowButtons" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
            <Setter Property="Background" Value="{StaticResource LightBlueGradientBrush}"/>
            <Setter Property="BorderBrush" Value="#F3CD05"/>
            <Setter Property="BorderThickness" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="ControlTabButtons" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="{StaticResource LightBlueGradientBrush}"/>
            <Setter Property="BorderBrush" Value="#F3CD05"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="FontFamily" Value="Berlin Sans FB"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EDF259"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <Grid Height="40" Margin="0 5 0 10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5 0 5">
                <TextBlock Style="{StaticResource WindowTitle}">Math Analyzer</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5 0 -10">
                <Button Uid="0" x:Name="btn1" Style="{StaticResource TopWindowButtons}" Click="Button_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="Black" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 10 10 10"/>
                </Button>
                <Button Uid="1" x:Name="btn2" Style="{StaticResource TopWindowButtons}" Click="Button_Click">
                    <materialDesign:PackIcon Kind="WindowMaximize" Foreground="Black" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 10 10 10"/>
                </Button>
                <Button Uid="2" x:Name="btn3" Style="{StaticResource TopWindowButtons}" Click="Button_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="Black" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 10 10 10"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Height="660">
            <StackPanel Orientation="Horizontal">
                <Grid Width="800">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <Grid Height="50">
                            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                                <Button Uid="0" Content="DRAW DIAGRAM" Style="{StaticResource ControlTabButtons}" Click="Button_Click_1"/>
                                <Button Uid="1" Content="EQUATIONS" Style="{StaticResource ControlTabButtons}" Click="Button_Click_1"/>
                                <Button Uid="2" Content="FOURIER SERIES" Style="{StaticResource ControlTabButtons}" Click="Button_Click_1"/>
                            </StackPanel>

                            <Grid x:Name="GridCursor" Width="150" Height="5" VerticalAlignment="Bottom" Background="#F3CD05" HorizontalAlignment="Left" Margin="10 0 0 0"/>
                        </Grid> 
                        <Grid x:Name="GridMain" VerticalAlignment="Top" Height="575" Margin="10 0 10 0">
                            <StackPanel>
                                
                            </StackPanel>
                            

                        </Grid>
                    </StackPanel>
                </Grid>
                <Grid Width="200" Margin="0 0 10 0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <Grid x:Name="ClockGrid" Height="200" Margin="0 0 10 0">
                            <Canvas x:Name="ClockCanvas" Width="200" Height="200">
                                <!--<Line X1="63" X2="70" Y1="100" Y2="100" Stroke="Black" StrokeThickness="2" Fill="Black" Canvas.Top="2"/>
                                <Line X1="237" X2="230" Y1="100" Y2="100" Stroke="Black" StrokeThickness="2" Fill="Black"/>
                                <Line X1="150" X2="150" Y1="13" Y2="20" Stroke="Black" StrokeThickness="2" Fill="Black"/>
                                <Line X1="150" X2="150" Y1="187" Y2="180" Stroke="Black" StrokeThickness="2" Fill="Black"/>
                                <Ellipse Canvas.Left="60" Canvas.Top="10" Width="180" Height="180" Stroke="Black" Margin="0 0 0 0" StrokeThickness="2"/>-->
                            </Canvas>


                            <!--<Ellipse Width="180" Height="180"  Margin="0 0 0 0" StrokeThickness="2">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush>
                                        <GradientStop Color="LightBlue" Offset="0"/>
                                        <GradientStop Color="DarkBlue" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <Ellipse Width="180" Height="180"  Margin="0 0 0 0" StrokeThickness="2">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush>
                                        <GradientStop Color="DarkBlue" Offset="0"/>
                                        <GradientStop Color="LightBlue" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>-->


                        </Grid>
                        <Grid Height="360">



                        </Grid>

                    </StackPanel>

                </Grid>
            </StackPanel>

        </Grid>
    </StackPanel>

</Window>

